<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fragment3_record_info_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center|center_vertical"
        android:text="녹음파일 재생"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#0091EA"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageButton
        android:id="@+id/fragment3_record_info_btn_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:gravity="center|center_vertical"
        android:background="@drawable/icon_clear_24dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/fragment3_record_info_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#eaeaea"
        android:gravity="center|center_vertical"
        android:text="게시글 제목"
        android:textColor="#000000"
        android:textSize="16sp"

        app:layout_constraintTop_toBottomOf="@id/fragment3_record_info_dialog_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <SeekBar
        android:id="@+id/fragment3_record_info_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp"

        app:layout_constraintTop_toBottomOf="@id/fragment3_record_info_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/fragment3_record_info_txtWatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="00:00:00"

        app:layout_constraintTop_toBottomOf="@id/fragment3_record_info_seekbar"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/fragment3_record_info_txt_recordlength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:text="mm:ss:nn"

        app:layout_constraintTop_toBottomOf="@id/fragment3_record_info_seekbar"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/fragment3_record_info_btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:src="@drawable/icon_play_36dp"
        android:background="@color/normalTransparentColor"

        app:layout_constraintTop_toBottomOf="@id/fragment3_record_info_seekbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/fragment3_record_info_btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:visibility="gone"
        android:src="@drawable/icon_pause_36dp"
        android:background="@color/normalTransparentColor"

        app:layout_constraintTop_toBottomOf="@id/fragment3_record_info_seekbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>